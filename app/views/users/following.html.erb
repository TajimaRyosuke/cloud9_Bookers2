<h2>Follow Users</h2>
<%if @users.exists? %>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",class:"attachment user profile_image fallback" %></td>

        <td><%= user.name %></td>

	      <td><%= "フォロー数： #{user.followed.count}" %></td>

        <td><%= "フォロワー数： #{user.follower.count}" %></td>

        <td><%= link_to "Show",  user_path(user), class:"user_34799" %></td>
      </tr>
    <% end %>
  </tbody>
 </table>
 <% else %>
 <p>フォローされていません。</p>
 <% end %>