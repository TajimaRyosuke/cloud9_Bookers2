<div class="profile-container">
  <p>投稿ユーザー画像：<%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <h3 class="profile-name"><%= @user.name %></h3>
  <h3 class ="profile-introduction"><%= @user.introduction %></h3>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag book, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>
  <p>Title：<%= book.book_name %></p>
  <p>Opinion：<%= post_image.caption %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>
<%= paginate @books %>