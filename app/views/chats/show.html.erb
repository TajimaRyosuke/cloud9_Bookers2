<div class="container">
 <div class="row">

<div class="col-md-4">
<h2><%= @user.name %>さんとのチャット</h2>
<%= form_with model: @chat do |f| %>
 <%= f.text_field :message %>
 <%= f.hidden_field :room_id %>
 <%= f.submit %>
<% end %>
</div>

<div class="col-md-7 offset-md-1">
<table>
  <thead>
    <tr>
      <th>投稿者名</th>
      <th>  メッセージ</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
    <tr>
      <th><%= chat.user.name %></th>
      <th>  <%= chat.message %></th>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>