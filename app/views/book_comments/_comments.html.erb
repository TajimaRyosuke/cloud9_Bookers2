<div class="comments">
         <% book_comment.each do |book_comment| %>
           <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"attachment user profile_image fallback" %>
           <%= book_comment.comment %>

           <% if current_user.id == book_comment.user_id %>
           <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete ,class:"btn btn-sm btn-danger destroy_book_28862", remote: true %>
           <% end %>
           <br>
           <%= link_to user_path(book_comment.user_id) do %>
           <%= book_comment.user.name %>
           <% end %><br><br>
         <% end %>
</div>
<div class="new-comment">
         <%= form_with model: [@book, BookComment.new] do |f| %>
            <%= f.text_area :comment, :size => "15x5", class: "form-control"%><br>
            <%= f.submit "送信する" %>
         <% end %>
</div>
