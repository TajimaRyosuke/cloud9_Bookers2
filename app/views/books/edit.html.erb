<main>
  <p id="notice"></p>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <% if @book.errors.any? %>
   <h3><%=@book.errors.count %>errors prohibited this book from being saved:</h3>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <%= message %>
    <% end %>
   </ul>
  <% end %>

  		<h1>Editing Book</h1>

  	 <%= form_with model: @, local: true do |f| %>
     <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title, class:"form-control book_title" %>
     </div>

      <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:"form-control book_body" %>
      </div>

      <div class="form-group">
      <%= f.submit 'Update Book', class:"btn btn-success" %>
      </div>
      <% end %>
      <%= link_to"Show ", book_path(@book.id), class:"book_28877" %>|
      <%= link_to"Back", books_path, class:"back" %>
    </div>
   </div>
  </div>
</main>