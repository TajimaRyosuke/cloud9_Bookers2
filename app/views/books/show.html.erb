<p id="notice"></p>
 <%=notice %>
<div class= "container px-5 px-sm-0">
  <div class ="row">

<%= render 'users/user', user: @user, book: @book_new %>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"attachment user profile_image fallback" %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
            <%= @book.title%>
            <% end %>
          </td>
          <td><%= @book.body %></td>

          <td><p>コメント数：<%= @book.book_comments.count %></p></td>

          <% if @user == current_user %>
          <td>
          <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success edit_book_28877" %>
          </td>
          <td>
          <%= link_to "Destroy", book_path(@book), method: :delete ,class:"btn btn-sm btn-danger destroy_book_28862" %></td>
          <% end %>
          </td>
          </tr>
        </tbody>
      </table>
        <div class="comments">
         <% @book.book_comments.each do |book_comment| %>
           <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"attachment user profile_image fallback" %>
           <%= book_comment.comment %>
           <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete ,class:"btn btn-sm btn-danger destroy_book_28862" %><br>
           <%= link_to user_path(@book.user_id) do %>
           <%= book_comment.user.name %><% end %><br>
         <% end %>
         </div>
         <div class="new-comment">
         <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
            <%= f.text_area :comment %>
            <%= f.submit "送信する" %>
         <% end %>
         </div>
    </div>
  </div>
</div>