<div class="post-body">

  <p>投稿ユーザー画像：<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>


  <p>ユーザーネーム：<%= @user.name %></p>
  <p>Title：<%= @book.book_name %></p>
  <p>Opinion：<%= @book.opinion %></p>

  <% if @user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@user), method: :delete %>
  <% end %>
</div>